        <Grid Grid.Row="3">
            <StackPanel Grid.Row="5" Orientation="Horizontal">
                <Label Content="PC : "></Label>
                <Label Name="numberPC" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" FontWeight="Bold"></Label>
                <Label FontSize="10" VerticalContentAlignment="Bottom">EA</Label>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
